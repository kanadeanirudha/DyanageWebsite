@{
    string isHomeActive = string.Equals(ViewBag.Active, "home", StringComparison.InvariantCultureIgnoreCase) ? "nav-link active current-page-active" : "nav-link";
    string isAboutUsActive = string.Equals(ViewBag.Active, "aboutus", StringComparison.InvariantCultureIgnoreCase) ? "nav-link active current-page-active" : "nav-link";
    string isServicesActive = string.Equals(ViewBag.Active, "services", StringComparison.InvariantCultureIgnoreCase) ? "nav-link active current-page-active" : "nav-link";
    string isContactUsActive = string.Equals(ViewBag.Active, "contactus", StringComparison.InvariantCultureIgnoreCase) ? "nav-link active current-page-active" : "nav-link";
}
<header id="header" class="header-effect-shrink" data-plugin-options="{&#39;stickyEnabled&#39;: true, &#39;stickyEffect&#39;: &#39;shrink&#39;, &#39;stickyEnableOnBoxed&#39;: true, &#39;stickyEnableOnMobile&#39;: false, &#39;stickyChangeLogo&#39;: true, &#39;stickyStartAt&#39;: 120, &#39;stickyHeaderContainerHeight&#39;: 90}" style="height: 139px;">
    <div class="header-body border-top-0 box-shadow-none" style="position: fixed;">
        <div class="header-container container container-xl-custom" style="height: 138px;">
            <div class="header-row">
                <div class="header-column">
                    <div class="header-row">
                        <div class="header-logo" style="width: 230px; height: 100px;">
                            <a href="/">
                                <img alt="Dynage" width="290" height="100" src="~/Content/Theme/images/logo.jpeg">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="header-column justify-content-end">
                    <div class="header-row">
                        <div class="header-nav header-nav-line header-nav-bottom-line header-nav-bottom-line-effect-1 order-2 order-lg-1">
                            <div class="header-nav-main header-nav-main-square header-nav-main-dropdown-no-borders header-nav-main-effect-2 header-nav-main-sub-effect-1">
                                <nav class="collapse">
                                    <ul class="nav nav-pills" id="mainNav">
                                        <li>
                                            <a class="@isHomeActive" href="/home/index">
                                                Home
                                            </a>
                                        </li>
                                        <li>
                                            <a class="@isAboutUsActive" href="/home/aboutus">
                                                About Us
                                            </a>
                                        </li>
                                        <li class="dropdown">
                                            <a class="@isServicesActive" href="/home/services">
                                                Our Services
                                            </a>
                                        </li>
                                        <li>
                                            <a class="@isContactUsActive" href="/home/contactus">
                                                Contact Us
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <button class="btn header-btn-collapse-nav" style="background:#fff;" data-bs-toggle="collapse" data-bs-target=".header-nav-main nav">
                                <img height="30" width="30" src="~/Content/Theme/images/menu.png"/>
                            </button>
                        </div>
                        <div class="d-none d-sm-inline-flex order-1 order-lg-2 ms-2">
                            <ul class="header-extra-info d-flex">
                                <li class="d-none d-xl-flex flex-column">
                                    <span class="d-block font-weight-semibold text-color-dark text-2 line-height-3">SUPPORT</span>
                                    <a href="tel:+917875655000" class="font-weight-bold text-color-primary text-5">7875655000</a>
                                </li>
                                <li class="d-flex flex-column">
                                    <span class="d-block font-weight-semibold text-color-dark text-2 line-height-3">SALES</span>
                                    <a href="tel:+917875655000" class="font-weight-bold text-color-primary text-5">7875655000</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
